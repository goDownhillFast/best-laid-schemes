<%= form_for(@category) do |f| %>
  <% if @category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@category.errors.count, "error") %> prohibited this activity from being saved:</h2>

      <ul>
        <% @category.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <fieldset>
    <legend>Activity</legend>

    <div class="row">
      <div class="large-12 columns">
        <div class="large-3 columns">
          <label>Activity Name</label>
          <%= f.text_field :name, placeholder: "Choose a Name" %>
        </div>
        <div class="large-2 columns">
          <label>Hours per Week</label>
          <%= f.number_field :budget, placeholder: "Hours per Week" %>
        </div>
        <div class="large-2 columns">
          <label>Google Code</label>
          <%= f.number_field :old_id %>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="large-3 columns">
        <div class="actions">
          <%= f.submit class: "button round" %>
        </div>
      </div>
    </div>
  </fieldset>

<% end %>