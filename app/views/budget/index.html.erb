<p id="notice"><%= notice %></p>

<div class="heading">
  <div class="row">
    <div class="large-4 columns">
      <h2>Category</h2>
    </div>
    <div class="large-2 columns">
      <h2>Budget           </h2>
    </div>
    <div class="columns large-3"><h2>Last Week</h2></div>
    <div class="columns large-3"><h2>This Week</h2></div>
  </div>
</div>
<% @categories.each do |category| %>

  <div class="row category">
    <% category.activities.each do |activity| %>
      <% next unless activity.budget && activity.budget > 0 %>
      <%# next unless @last_week_full.inject(0) {|sum, hash| sum + hash[category.id][:activities][activity.old_id][:total] } > 0 %>
      <div class="row activity-row">
        <div class="row-12 columns activity-summary" data-activity-id='<%= activity.id %>'>
          <div class="large-4 columns">
            <%= link_to(edit_activity_path(activity)) do %><%= activity.name %>
            <% end %>
          </div>
          <div class="large-2 columns"><%= activity.budget %></div>
          <div class="large-2 columns activity-time-total">
            <div class="flot-placeholder has-tip tip-top" data-time-total="<%= @last_week_full[category.id][:activities][activity.old_id][:total] %>" data-time-budget="<%= activity.budget || '--' %>" style="height:30px; width: 100%;" data-tooltip title="You spent <%= @last_week_to_date[category.id][:activities][activity.old_id][:total] %> hours last week, and have planned <%= @this_week_to_date[category.id][:activities][activity.old_id][:total] %>  "></div>
          </div>
          <div class="large-1 columns">
            <%= @last_week_full[category.id][:activities][activity.old_id][:total] %>
          </div>
          <div class="large-2 columns end activity-time-total">
            <div class="flot-placeholder has-tip tip-top" data-time-total="<%= @this_week_full[category.id][:activities][activity.old_id][:total] %>" data-time-budget="<%= activity.budget || '--' %>" style="height:30px; width: 100%;" data-tooltip title="You spent <%= @last_week_to_date[category.id][:activities][activity.old_id][:total] %> hours last week, and have planned <%= @this_week_to_date[category.id][:activities][activity.old_id][:total] %>  "></div>
          </div>
          <div class="large-1 columns">
            <%= @this_week_full[category.id][:activities][activity.old_id][:total] %>
          </div>

        </div>
      </div>

    <% end %>
    <div class="row">
      <div class="row-12 columns category-total">
        <div class="large-4 columns">
          <%= link_to(category_path(category)) do %>Total <%= category.name %>
          <% end %>
        </div>
        <div class="large-2 columns end">
          <%= category.budget %>
        </div>
        <div class="large-2 columns end activity-time-total">
          <div class="flot-placeholder has-tip tip-top" data-time-total="<%= @last_week_full[category.id][:total] %>" data-time-budget="<%= category.budget || '--' %>" style="height:30px; width: 100%;" data-tooltip title="You spent <%= @last_week_to_date[category.id][:total] %> hours last week, and have planned <%= @this_week_to_date[category.id][:total] %>  "></div>
        </div>
        <div class="large-1 columns end">
          <%= @last_week_full[category.id][:total] %>
        </div>
        <div class="large-2 columns end activity-time-total">
          <div class="flot-placeholder has-tip tip-top" data-time-total="<%= @this_week_full[category.id][:total] %>" data-time-budget="<%= category.budget || '--' %>" style="height:30px; width: 100%;" data-tooltip title="You spent <%= @last_week_to_date[category.id][:total] %> hours last week, and have planned <%= @this_week_to_date[category.id][:total] %>  "></div>
        </div>
        <div class="large-1 columns end">
          <%= @this_week_full[category.id][:total] %>
        </div>
      </div>


    </div>
  </div>
<% end %>