<p id="notice"><%= notice %></p>

<div class="heading">
  <div class="row">
    <div class="large-4 columns">
      <h2>Category</h2>
    </div>
    <div class="large-2 columns">
      <h2>Budget</h2>
    </div>
    <div class="columns large-3"><h2>Last Week</h2></div>
    <div class="columns large-3"><h2>This Week</h2></div>
  </div>
</div>
<% @categories.each do |category| %>

  <div class="row category">
    <% category.activities.each do |activity| %>
      <% next unless activity.budget && activity.budget > 0 %>
      <div class="row activity-row">
        <div class="row-12 columns activity-summary" data-activity-id='<%= activity.id %>'>
          <div class="large-4 columns">
            <%= link_to(edit_activity_path(activity)) do %>
              <%= activity.name %>
            <% end %>
          </div>
          <div class="large-8 columns">
            <div class="row">
              <% [0..6].each do |i| %>
                <div class="large-1 columns">
                  <%= event_day_activity_total(activity.old_id, i) %>
                </div>
                <div class="large-1 columns">
                  <%#= event_week_activity_total(activity.old_id) %>
                </div>
              <% end %>
            </div>
          </div>

        </div>
      </div>

    <% end %>
    <div class="row">
      <div class="row-12 columns category-total">
        <div class="large-4 columns">
          <%= link_to(category_path(category)) do %>
            Total <%#= category.name %>
          <% end %>
        </div>
        <div class="large-8 columns">
          <% [0..6].each do |i| %>
            <%#= event_day_category_total(category, i) %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>